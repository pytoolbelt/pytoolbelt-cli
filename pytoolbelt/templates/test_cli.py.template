import pytest
import re
from src import Version

def test_version_output(capsys):
    version_instance = Version()
    exit_code = version_instance()
    captured = capsys.readouterr()  # Capture the output

    assert exit_code == 0  # Test that the return value is as expected

    version_match = re.search(r"{{tool_name}} :: Version (\d+\.\d+\.\d+)", captured.out)
    assert version_match is not None, "Version number not found in output"
